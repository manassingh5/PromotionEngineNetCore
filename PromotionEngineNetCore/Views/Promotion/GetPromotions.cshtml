@model IEnumerable<PromotionViewModel>
@{
    ViewBag.Title = "View Available Promotions";
}

<h3>Promotions</h3>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.css" />
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>

<table class="table-condensed" style="width:100%">
    <tr>

        <th style="text-align: right">ItemName</th>
        <th style="text-align: right">Quantity</th>
        <th style="text-align: right">Price</th>
        <th style="text-align: right">Option</th>
    </tr>
    @if (ViewBag.Promotions != null)
    {
        @foreach (var item in ViewBag.Promotions)
        {
            <tr>
                <td style="text-align: right">
                    @item.ItemName
                </td>
                <td style="text-align: right">
                    @item.ItemQuantity.ToString(format: "#,##0")
                </td>
                <td style="text-align: right">
                    @item.ItemPrice.ToString(format: "#,##0.00")
                </td>
                <td style="text-align: right">
                    <a asp-controller="Promotion" asp-action="DeletePromotions" asp-route-id="@item.PromotionId">Remove</a>
                </td>

            </tr>
        }
    }

</table>
@Html.Partial("_AddPromotion")
